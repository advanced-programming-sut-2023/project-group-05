<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.*?>
<?import java.util.*?>
<?import javafx.scene.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<?import javafx.scene.text.Text?>
<BorderPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="org.example.view.SignupMenu"
            stylesheets="@../css/Menu/SignupMenu.css"
            prefHeight="600.0" prefWidth="1000.0"
            styleClass = "background">
    <center>
        <VBox spacing = "10" alignment="CENTER" >
            <HBox spacing = "10" alignment = "CENTER" >
                <Text styleClass="fieldText" text = "username : " />
                <TextField styleClass="inputField" promptText = "username" fx:id = "usernameTextField" />
            </HBox>
            <HBox spacing = "10" alignment = "CENTER" >
                <Text styleClass="fieldText" text = "password : " />
                <PasswordField styleClass="inputField" promptText="password" fx:id = "passwordField" />
            </HBox>
            <HBox spacing = "10" alignment = "CENTER" >
                <Text styleClass="fieldText" text = "  confirm : " />
                <PasswordField styleClass="inputField" promptText="password" fx:id = "passwordConfirmField" />
            </HBox>
            <HBox spacing = "10" alignment = "CENTER" >
                <Text styleClass="fieldText" text = "slogan : " />
                <TextField styleClass="inputField" promptText="slogan" fx:id = "sloganTextField" />
                <Button styleClass = "button" onMouseClicked="#randomSlogan" text = "random" />
            </HBox>
            <HBox spacing = "10" alignment = "CENTER">
                <Text styleClass="fieldText" text = "nickname : " />
                <TextField styleClass="inputField" promptText="nickname" fx:id = "nicknameTextField" />
            </HBox>
            <HBox spacing = "10" alignment = "CENTER" >
                <Text styleClass="fieldText" text = "email : " />
                <TextField styleClass="inputField" promptText="email" fx:id = "emailTextField" />
            </HBox>
            <Button styleClass = "button" text = "submit" onMouseClicked="#submit" />
        </VBox>
    </center>
</BorderPane>
